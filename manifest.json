{
  "manifest_version": 3,
  "name": "XatBrowser AI",
  "version": "1.0",
  "description": "AI-powered browser assistant with Azure OpenAI and Claude AI support",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "XatBrowser AI"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chat.html",
        "chat.js",
        "agent.js",
        "configManager.js",
        "aiClients.js",
        "config/*",
        "settings.html",
        "settings.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 